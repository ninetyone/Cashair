<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip">

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/logo"
            android:layout_marginTop="23dp"
            android:id="@+id/imageView2"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Pay to (Enter Receiver&apos;s Pin No.)"
            android:typeface="serif"
            android:textSize="22dp"
            android:layout_marginTop="100sp"
            android:textColor="@android:color/white"
            android:id="@+id/textView8" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dip"
            android:text="Amount to Pay"
            android:textColor="@android:color/white"
            android:typeface="serif"
            android:textSize="22dp"
            android:id="@+id/textView9" />


        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textColor="#000000"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="39sp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/btnLinkToLoginScreen"
            android:layout_toEndOf="@+id/btnLinkToLoginScreen"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Cancel"
            android:layout_marginTop="39sp"
            android:id="@+id/btnLinkToLoginScreen"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_below="@+id/amounttopay"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enterpin"
            android:textColor="#000000"
            android:background="#ffffff"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView9"
            android:layout_alignEnd="@+id/textView9" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/amounttopay"
            android:textColor="#000000"
            android:background="#ffffff"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView9"
            android:layout_alignEnd="@+id/textView9" />

    </RelativeLayout>

</ScrollView>
