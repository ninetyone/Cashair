<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/generatenumber1"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_alignTop="@+id/textView1"
        android:layout_alignLeft="@+id/currentbal"
        android:layout_alignStart="@+id/currentbal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_bal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/generatenumber1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pinno"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/imageView5"
        android:layout_toLeftOf="@+id/imageView5"
        android:layout_toStartOf="@+id/imageView5" />

    <Button
        android:id="@+id/trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Transaction"
        android:textColor="#C12382"
        android:textSize="15dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:background="@null"
        android:layout_above="@+id/signout"
        android:layout_alignRight="@+id/clicktopay"
        android:layout_alignEnd="@+id/clicktopay" />

   <Button
       android:id="@+id/btntoupdate"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@null"
       android:text="Edit Profile"
       android:textColor="#C12382"
       android:textSize="15dp"
       android:textStyle="bold"
       android:typeface="serif"
       android:layout_above="@+id/trans"
       android:layout_alignParentRight="true"
       android:layout_alignParentEnd="true" />

   <Button
       android:id="@+id/signout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@null"
       android:text="Sign Out"
       android:textColor="#C12382"
       android:textSize="15dp"
       android:textStyle="bold"
       android:typeface="serif"
       android:layout_above="@+id/view"
       android:layout_alignRight="@+id/trans"
       android:layout_alignEnd="@+id/trans" />

   <TextView
       android:id="@+id/textView4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="My Account"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:textColor="#ffffff"
       android:textSize="22sp"
       android:layout_marginLeft="13sp"
       android:layout_marginTop="10sp"
       android:layout_alignTop="@+id/imageView4"
       android:layout_toLeftOf="@+id/currentbal"
       android:layout_toStartOf="@+id/currentbal" />

   <TextView
       android:id="@+id/currentbal"
       android:layout_width="60dp"
       android:layout_height="wrap_content"
       android:textSize="18sp"
       android:textColor="@android:color/white"
       android:layout_alignTop="@+id/textView2"
       android:layout_toLeftOf="@+id/signout"
       android:layout_toStartOf="@+id/signout" />

    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:id="@+id/imageView4"
        android:src="@drawable/logo"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/profile"
        android:layout_alignTop="@+id/ur_name"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" "
        android:id="@+id/ur_name"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="15sp"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5" />

    <ImageButton
        android:layout_width="400sp"
        android:layout_height="90sp"
        android:id="@+id/clicktopay"
        android:src="@drawable/paynow"
        android:background="@null"
        android:layout_marginTop="39sp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#ffffff"
    android:layout_above="@+id/textView10"
    android:layout_alignRight="@+id/signout"
    android:layout_alignEnd="@+id/signout"
    android:id="@+id/view" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Use at your own risk!"
        android:id="@+id/textView10"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>